{% macro display_control(control, standard) -%}
{{ control }}:
{%- for path, component_set in dpath_loop("**/satisfies/%s/%s" % (standard, control)) -%}
  {{ " " }}
  # {{ path }}
  {% if component_set is mapping %}
  {{ component_set | yaml_dump(default_flow_style=True) }}
  {% else %}
  {{ component_set }}
  {% endif %}
{%- else -%}
 {{ " " }} ~ {{ " " }}
{%- endfor %}
{% endmacro %}
